{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6":true,
        "jest":true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017 
    },
    "rules": {
        "indent": [ "error", 4 ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
